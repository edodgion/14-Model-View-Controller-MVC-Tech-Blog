<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Blog:</h3>

    <form class="form new-dashboard-form">
      <div class="form-group">
        <label for="dashboard-name">Title:</label>
        <input class="form-input" type="text" id="dashboard-name" name="dashboard-name" />
      </div>
      <div class="form-group">
        <label for="dashboard-desc">Content:</label>
        <textarea class="form-input" id="dashboard-desc" name="dashboard-desc"></textarea>
      </div>
      <div class="form-group new-post-form">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 dashboard-list">
    <h3>Current Blog Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
        <button class="btn btn-sm btn-danger post-list" data-id="{{post.id}}">DELETE</button>
        <button class="btn btn-sm btn-success" data-id="{{post.id}}">UPDATE</button>
      </div>
      <div class="col-md-4">
        
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<link rel="stylesheet" href="/css/style.css">
