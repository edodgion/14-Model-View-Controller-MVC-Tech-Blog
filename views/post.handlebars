<div class="container">
<div class="row p-1 mb-2 bg-dark text-white">

  <div class="col-md-9"><h3>{{name}}</h3></div>
  <div class="col-md-3">Posted by {{user.name}} on {{format_date date_created}}</div>
  <div class="col-xs-9 p-2 mb-10 bg-light text-dark">{{description}}</div>
</div>



{{#if logged_in}}
<form class="new-comment-form" id="new-comment" data-commentid={{id}}>
  <div class="col-md-6 mb-3 d-flex align-items-center p-2 mb-10 bg-light text-dark">
        <textarea class="form-input" id="comment-desc" placeholder="Please leave a comment..." name="post-desc"></textarea>
        <button type="submit" class="new-comment-form btn btn-primary" id="new-comment">Comment</button>
  </div>
  </form>
  
{{/if}}

{{#each comments as |comment|}}
<div class="container">
<div class="row p-1 mb-2 bg-dark text-white">
		<div class="comment-desc col-md-9"></div>
      <div class="col-md-3">Comment from {{user.name}} on {{format_date date_created}}</div>
			<div class="col-xs-9 p-2 mb-10 bg-light text-dark">{{comment_content}}</div>
		</div>

    <button type="submit" class="delete-comment-form btn btn-primary" data-commentid={{comment_id}} id="delete-comment">Delete</button>
    {{!-- <button type="submit" class="update-comment-form btn btn-primary" id="update-comment">Update</button> --}} 
    </div>
  
    </div> 
{{/each}}
</div>

 

<script src="../js/comment.js"></script>